@model InvoiceGenerator.Models.Invoice

@{
    ViewData["Title"] = "Create Invoice";
}

<div class="container mt-4">
    <h1 class="text-center text-success fw-bold mb-4">Create New Invoice</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label fw-semibold"></label>
                            <input asp-for="CustomerName" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomerAddress" class="form-label fw-semibold"></label>
                            <input asp-for="CustomerAddress" class="form-control" />
                            <span asp-validation-for="CustomerAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InvoiceDate" class="form-label fw-semibold"></label>
                            <input asp-for="InvoiceDate" class="form-control" />
                            <span asp-validation-for="InvoiceDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ItemNames" class="form-label fw-semibold"></label>
                            <input asp-for="ItemNames" class="form-control" />
                            <span asp-validation-for="ItemNames" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalAmount" class="form-label fw-semibold"></label>
                            <input asp-for="TotalAmount" class="form-control" />
                            <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
