@model InvoiceGenerator.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<div class="container mt-4">
    <h1 class="text-center text-danger fw-bold mb-3">Delete Invoice</h1>

    <div class="alert alert-warning text-center fw-semibold">
        Are you sure you want to delete this invoice? This action cannot be undone.
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title text-muted mb-3">Invoice Details</h4>
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold text-secondary">Customer Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Customer Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerAddress)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Invoice Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.InvoiceDate)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Item Names</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ItemNames)</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Total Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalAmount)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex justify-content-between">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    </form>
</div>
